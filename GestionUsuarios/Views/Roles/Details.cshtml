@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Detalles del Rol";
    var permisos = ViewBag.Permisos as IEnumerable<GestionUsuarios.Models.RolPermiso> 
                  ?? System.Linq.Enumerable.Empty<GestionUsuarios.Models.RolPermiso>();
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="AsignarPermisos" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="fas fa-key"></i> Permisos
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9"><small class="text-muted">@Model.Id</small></dd>
            </dl>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5>Permisos asignados</h5>
        </div>
        <div class="card-body">
            @if (permisos.Any())
            {
                foreach (var grupo in permisos.GroupBy(p => p.Permiso?.Modulo?.NombreModulo ?? "Sin Módulo"))
                {
                    <h6 class="mt-3">@grupo.Key</h6>
                    <ul class="list-unstyled">
                        @foreach (var rp in grupo)
                        {
                            <li>
                                <strong>@rp.Permiso?.NombrePermiso</strong>
                                <small class="text-muted">(@rp.Permiso?.CodigoPermiso)</small>
                                <div><small class="text-muted">@rp.Permiso?.Descripcion</small></div>
                                <div><small class="text-muted">Asignado: @rp.FechaAsignacion.ToString("dd/MM/yyyy")</small></div>
                            </li>
                        }
                    </ul>
                }
            }
            else
            {
                <p>No hay permisos asignados a este rol.</p>
            }
        </div>
    </div>
</div>