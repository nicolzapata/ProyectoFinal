@model GestionUsuarios.Models.ApplicationUser

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5>Información Personal</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="NombreCompleto" class="form-label"></label>
                            <input asp-for="NombreCompleto" class="form-control" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" readonly />
                            <small class="text-muted">El email no se puede modificar</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Teléfono</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NumeroDocumento" class="form-label"></label>
                                    <input asp-for="NumeroDocumento" class="form-control" />
                                    <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="rolSeleccionado" class="form-label">Rol</label>
                            @{
                                var roles = ViewBag.Roles as IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
                                ?? System.Linq.Enumerable.Empty<Microsoft.AspNetCore.Identity.IdentityRole>();
                                var rolesUsuario = ViewBag.RolesUsuario as IEnumerable<string>
                                ?? System.Linq.Enumerable.Empty<string>();
                            }
                            <select name="rolSeleccionado" class="form-select">
                                <option value="">-- Sin Rol --</option>
                                @foreach (var rol in roles)
                                {
                                    <option value="@rol.Name" selected='@(rolesUsuario.Contains(rol.Name) ? "selected" : null)'>@rol.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" />
                                <label asp-for="Activo" class="form-check-label">Usuario Activo</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label"></label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> Ver Detalles
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>Información del Sistema</h5>
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Fecha de Registro:</dt>
                        <dd>@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                        <dt>Último Acceso:</dt>
                        <dd>@(Model.UltimoAcceso?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</dd>

                        <dt>Email Verificado:</dt>
                        <dd>
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}