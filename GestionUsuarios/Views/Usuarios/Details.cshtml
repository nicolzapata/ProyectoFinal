@model GestionUsuarios.Models.ApplicationUser

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5><i class="fas fa-user"></i> Información del Usuario</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre Completo:</dt>
                        <dd class="col-sm-8">@Model.NombreCompleto</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "No especificado")</dd>

                        <dt class="col-sm-4">Documento:</dt>
                        <dd class="col-sm-8">@(Model.NumeroDocumento ?? "No especificado")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Fecha Registro:</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Último Acceso:</dt>
                        <dd class="col-sm-8">@(Model.UltimoAcceso?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Email Verificado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Observaciones))
            {
                <hr />
                <div class="row">
                    <div class="col-12">
                        <dt>Observaciones:</dt>
                        <dd>@Model.Observaciones</dd>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.Roles != null && ((List<string>)ViewBag.Roles).Any())
    {
        <div class="card mt-3">
            <div class="card-header bg-info text-white">
                <h5><i class="fas fa-user-tag"></i> Roles Asignados</h5>
            </div>
            <div class="card-body">
                @foreach (var rol in (List<string>)ViewBag.Roles)
                {
                    <span class="badge bg-info me-2 p-2">@rol</span>
                }
            </div>
        </div>
    }
</div>